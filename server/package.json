{
  "name": "server",
  "description": "",
  "version": "0.1.0",
  "author": "Belchior Oliveira",
  "license": "MIT",
  "keywords": ["JavaScript", "Node.js", "GraphQL", "MongoDB", "Relay Modern", "React"],
  "main": "src/server.js",
  "scripts": {
    "lint": "eslint src",
    "start": "nodemon -r esm src/server.js",
    "start:debug": "cross-env DEBUG='*' npm run start",
    "test": "jest --watch",
    "test:ci": "jest --coverage --ci",
    "write-schema": "node -r esm scripts/write-schema"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "mongoose": "^5.9.5",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-jest": "^25.1.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-no-null": "^1.0.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2"
  },
  "optionalDependencies": {
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.3",
    "@types/mongoose": "^5.7.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.js"
    ]
  }
}
