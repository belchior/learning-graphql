{
  "name": "server",
  "description": "server",
  "version": "0.1.0",
  "author": "Belchior Oliveira",
  "license": "MIT",
  "main": "build/server.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts'",
    "start": "node build/server.js",
    "start:ts": "nodemon",
    "start:debug": "cross-env DEBUG='*' npm run start:ts",
    "test": "jest --watch",
    "test:ci": "jest --coverage --ci",
    "write-schema": "ts-node scripts/write-schema"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.0.0",
    "mongoose": "^5.9.7",
    "object-hash": "^2.0.3",
    "querystring": "^0.2.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.7.0",
    "jest": "^25.2.7",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "optionalDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.2.1",
    "@types/mongodb": "^3.5.5",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^13.11.0",
    "@types/object-hash": "^1.3.1",
    "@types/ramda": "^0.27.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "build"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
