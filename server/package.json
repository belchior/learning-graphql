{
  "name": "learning-graphql-server",
  "description": "server",
  "version": "0.1.0",
  "author": "Belchior Oliveira",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "main": "src/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belchior/learning-graphql.git"
  },
  "scripts": {
    "lint": "eslint src",
    "start": "node -r esm src/server.js",
    "start:watch": "nodemon -r esm src/server.js",
    "test": "cross-env CI=true jest --coverage",
    "test:watch": "jest --watch",
    "write-schema": "node scripts/write-schema"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.1.0",
    "mongoose": "^5.9.18",
    "object-hash": "^2.0.3",
    "querystring": "^0.2.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-jest": "^26.0.1",
    "cross-env": "^7.0.0",
    "eslint": "^7.2.0",
    "eslint-plugin-jest": "^23.13.2",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "build"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "src/**/*.spec.js"
    ]
  }
}
