{
  "name": "learning-graphql-server",
  "description": "server",
  "version": "0.1.0",
  "author": "Belchior Oliveira",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "main": "build/src/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belchior/learning-graphql.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts'",
    "start": "node build/server.js",
    "start:watch": "nodemon --legacy-watch",
    "test": "jest --coverage --ci --color",
    "test:watch": "jest --watch",
    "write-schema": "ts-node scripts/write-schema"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^14.7.0",
    "object-hash": "^2.0.3",
    "pg": "^8.2.1",
    "querystring": "^0.2.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.4",
    "@types/mongodb": "^3.5.25",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^14.0.18",
    "@types/object-hash": "^1.3.3",
    "@types/pg": "^7.14.3",
    "@types/ramda": "^0.27.7",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "cross-env": "^7.0.0",
    "eslint": "^7.4.0",
    "eslint-plugin-jest": "^23.18.0",
    "jest": "^26.1.0",
    "mongoose": "^5.9.21",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "build"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
