version: '3.0'

networks:
  myNetwork:
    driver: bridge

services:
  # client:
  #   depends_on:
  #     - server
  #   container_name: learning-graphql-client
  #   build:
  #     context: ./client
  #     args:
  #       - SERVER_PROXY_PASS=location /graphql { proxy_pass http://learning-graphql-server:4000/graphql; }
  #   ports:
  #     - "${CLIENT_PORT}:80"
  #   networks:
  #     - myNetwork

  server:
    depends_on:
      - database
    container_name: server.dev
    build:
      context: ./server
      dockerfile: Dockerfile.dev
    restart: always
    env_file:
      - ./.env
    ports:
      - ${PORT}:${PORT}
    networks:
      - myNetwork
    volumes:
      - ./server:/usr/app

  database:
    image: postgres:12
    container_name: postgres.dev
    restart: always
    env_file:
      - ./.env
    ports:
      - ${PGPORT}:${PGPORT}
    networks:
      - myNetwork
    volumes:
      - ${PGDBPATH}:/var/lib/postgresql/data
