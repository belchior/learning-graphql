{
  "name": "learning-graphql-client",
  "description": "client",
  "version": "0.1.0",
  "author": "Belchior Oliveira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belchior/learning-graphql.git"
  },
  "scripts": {
    "build": "npm run relay && react-scripts build",
    "get-schema": "cd ../server && npm run write-schema && cd ../client",
    "lint": "eslint src",
    "relay": "relay-compiler --src ./src --schema ./src/schema.graphql",
    "start": "concurrently -k 'react-scripts start' 'npm run relay -- --watch'",
    "test": "cross-env CI=true react-scripts test --coverage",
    "test:watch": "react-scripts test"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.53",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-relay": "^9.0.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1"
  },
  "devDependencies": {
    "@testing-library/user-event": "^11.4.0",
    "babel-plugin-relay": "^9.0.0",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.11.0",
    "graphql": "^15.0.0",
    "relay-compiler": "^9.0.0",
    "relay-config": "^9.0.0",
    "relay-test-utils": "^9.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__generated__/*.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
